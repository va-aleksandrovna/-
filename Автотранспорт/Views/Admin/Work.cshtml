@model List<WorkModel>

@{
    ViewData["Title"] = "Admin Page Заявки";
}

<div class="image-container">
    <div class="text-overlay2">Заявки</div>

    <a asp-action="GetNew" class="btn_fil" style="margin-left: -800px;">Новые</a>
    <a asp-action="GetIn" class="btn_fil" style="margin-left: -500px;">В работе</a>
    <a asp-action="GetClose" class="btn_fil" style="margin-left: -200px;">Завершенные</a>
    <a asp-action="Work" class="btn_fil" style="margin-left: 100px;">Все заявки</a>

    <img src="/images/ESSAY.jpg" style="margin-top: -16px;" />
</div>

<div class="tab_cars">
    <a class="btn_filter2" style="text-decoration: none;" asp-action="Index" role="button">На главную</a>
    <a class="btn_filter3" style="text-decoration: none;" previewlistener="true" asp-action="AddWork" role="button">Добавить</a>
</div>

<div class="cars-box">
    <div class="cars-content">
        @foreach (WorkModel item in Model)
        {
            <div class="car_n">
                <div class="line"></div>
                <div class="car_n2">
                    <div style="display: flex; flex-direction: column;">
                        <a class="button-a2" style="color: #091242;" asp-action="EditWork" asp-route-id="@item.Id" role="button">
                            <svg class="svg-icon-a" fill="none" viewBox="0 0 24 24" height="48" width="48" xmlns="http://www.w3.org/2000/svg"><g stroke="#0B63F6" stroke-linecap="round" stroke-width="2"><path d="m20 20h-16"></path><path clip-rule="evenodd" d="m14.5858 4.41422c.781-.78105 2.0474-.78105 2.8284 0 .7811.78105.7811 2.04738 0 2.82843l-8.28322 8.28325-3.03046.202.20203-3.0304z" fill-rule="evenodd"></path></g></svg>
                        </a>
                        <a class="button-a2" style="color: #091242;" asp-action="DeleteWork" asp-route-id="@item.Id" role="button">
                            <svg viewBox="0 0 15 17.5" height="35" width="30" xmlns="http://www.w3.org/2000/svg" class="icon-ad">
                                <path transform="translate(-2.5 -1.25)" d="M15,18.75H5A1.251,1.251,0,0,1,3.75,17.5V5H2.5V3.75h15V5H16.25V17.5A1.251,1.251,0,0,1,15,18.75ZM5,5V17.5H15V5Zm7.5,10H11.25V7.5H12.5V15ZM8.75,15H7.5V7.5H8.75V15ZM12.5,2.5h-5V1.25h5V2.5Z" id="Fill"></path>
                            </svg>
                        </a>
                    </div>

                    <div class="work_text">
                        @if (item.TypeTransit == "Пассажирская")
                        {
                            <div class="car_textname">
                                Пассажирская перевозка № @item.Id
                            </div>
                        }
                        else
                        {
                            <div class="car_textname">
                                Грузовая перевозка № @item.Id
                            </div>
                        }
                        <div>
                            <div>Имя клиента: @item.Name @item.Surname</div>
                            @if (item.Email != null)
                            {
                                <div>Email: @item.Email</div>
                            }
                            <div>Телефон: @item.Phone</div>
                            <div>Дата и время: @item.Data.ToString("d") @item.Time</div>
                            <div>@item.AddressFrom -> @item.AddressTo</div>
                            @if (item.NumberPassenger != null)
                            {
                                <div>Число пассажиров: @item.NumberPassenger</div>
                            }
                        </div>
                    </div>
                    <div>
                        @if(item.Status == null)
                        {
                            <div class="circle" style="border: 1px solid orange; background-color: orange;"></div>
                        }
                        @if (item.Status == false)
                        {
                            <div class="circle" style="border: 1px solid blue; background-color: blue;"></div>
                        }
                        @if (item.Status == true)
                        {
                            <div class="circle" style="border: 1px solid green; background-color: green;"></div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>